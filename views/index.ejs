<html>
	<head>
		<title>Quoting Dojo</title>
        <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
    </head>
    <body>
        <div class="container text-center">
            <h1>Welcome to Quoting Dojo</h1>
            <% JSON.stringify(messages) %>
            <% if (messages.quotes) { %>
                <% for (var x of messages.quotes) { %>
                    <h3><%= x %></h3>
                <% } %>
            <% } %>
            <form action="process" method="post">
                <div>
                    <label class="col-2">Your name:</label>
                    <input type="text" name="name">
                </div>
                <div>
                    <label class="col-2">Your quote:</label>
                    <textarea name="quote"></textarea>
                </div>
                <input class="btn btn-success" value="Add my quote!" type="submit">
                <a href="/quotes" class="btn btn-primary">Skip to quotes!</a>
            </form>
    	</div>
	</body>
</html> 